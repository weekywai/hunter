<?xml version="1.0" encoding="utf-8" ?>
<Floating id="'alertSystem'" name="'alertSystem'" widthPt="100" heightPt="100"  skin:Paint-color = "0x000000" skin:Paint-alpha = "0.5"  on-resize=" 
		$this.scaleContent = $Lib.current.stage.stageWidth / 1280;">
    <ViewStack wrap="true" widthPt="100" heightPt="100"  on-display="$this.show(@content);"   >
		<Box id="'systemPopup'" widthPt="100" heightPt="100" defaults="'Screen,Level1'">
			<Widget skinName="'SuerPopupBg'" w="718" h="332">
				<Button name="'noBtn'" rightPt="7" topPt="90" text="'否'"
					defaults="'submitBtn,HightLight'" 
				/>
				<Button name="'yesBtn'" leftPt="7" topPt="90" text="'是'"
					defaults="'submitBtn,HightLight'" 
				/>
				<Box widthPt="100" heightPt="100" align="'center,middle'">
					<Text name="'tipTxt'" defaults="'TitleWrite'" format-size="36" text="@msg" format-align="'center'" />
				</Box>
			</Widget>
		</Box>
		<Widget name="'loading'" widthPt="100" heightPt="100">
			<meta:include src="ui/popup/loading.xml"/>
		</Widget>
    </ViewStack>
</Floating>